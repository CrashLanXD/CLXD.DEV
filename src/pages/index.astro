---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Projects from "../components/Projects.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Porfolio de CrashLanXD - Desarollador fullstack"
  description="Hola!, soy CrashLanXD ;)"
>
  <main>
    <Section class="py-16 md:py-36" id="home">
      <Hero />
    </Section>

    <Section id="projects">
      <h2
        class="flex items-center mb-6 text-5xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-16" />Proyectos
      </h2>
      <Projects />
    </Section>

    <Section id="aboutMe" class="mt-36">
      <h2
        class="flex items-center mb-6 text-5xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <UserIcon class="size-16" />Sobre m√≠
      </h2>
      <AboutMe />
    </Section>
  </main>
</Layout>

<style>
  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Ubuntu,
      sans-serif;
  }
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
