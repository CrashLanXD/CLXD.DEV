---
const { class: className, id } = Astro.props;
---

<section id={id} class={`container mx-auto mt-8 max-w-screen-xl ${className}`}>
  <h2 class="flex justify-center items-center mb-6 text-6xl font-semibold gap-x-3 text-[--text-900] [&>span]:flex">
    <slot name="title" />
  </h2>
  <div class="gap-16 items-center py-8 px-4 mx-auto rounded-2xl w-full lg:px-6 bg-[--background-100] bg-opacity-85 backdrop-blur-sm">
    <slot />
  </div>
</section>

<style>
  @keyframes show {
    from {
      opacity: 0.5;
      transform: translateY(50px);
    }
    
    to {
      opacity: 1;
      transform: translateY(-50px);
    }
  }
  
  section {
    view-timeline-name: --section;
    view-timeline-axis: block;
  
    animation-timeline: --section;
    animation-name: show;
  
    animation-range: entry 15% cover 35%;
    animation-fill-mode: both;
  }
</style>